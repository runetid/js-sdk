{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es2015",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS",
        }
    }
}